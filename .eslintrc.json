{
  "root": true,
  "env": {
    "es2017": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-unused-vars": [
        "warn", {
            "varsIgnorePattern": "^_",
            "args": "none"
        }
    ],
    "quotes": [1, "double", "avoid-escape"],
    "indent": [1, 4]
  },
  "settings": {
    "react": {
      "version": "16.6.3"
    }
  }
}
